    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <%= stylesheet_pack_tag 'stylesheets', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

  <body>
    <%= yield %>
  </body>
</html>
